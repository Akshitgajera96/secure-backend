INKSCAPE_BIN=C:/Program Files/Inkscape/bin/inkscape.exe
PRINT_URL_TTL_SECONDS=60
PRINT_JOB_STALE_MS=900000
PRINT_DEBUG=1
PRINT_DEBUG_SAVE=1





############################
# Core
############################
NODE_ENV=production
PORT=8000
BODY_LIMIT=500mb


############################
# MongoDB
############################
MONGO_URI=mongodb+srv://__USER__:__PASSWORD__@__HOST__/securepdf?retryWrites=true&w=majority


############################
# Auth / Security
############################
JWT_SECRET=__FILL__              # REQUIRED
JOB_PAYLOAD_HMAC_SECRET=__FILL__   # REQUIRED (vector jobs integrity)
PRINT_PAYLOAD_SECRET=__FILL__      # REQUIRED (recommended; JWT fallback avoided)


############################
# CORS
############################
# Recommended: single frontend
FRONTEND_URL=__FILL__

# OR (advanced allowlist)
# CORS_ORIGINS=https://site1.com,https://site2.com


############################
# Feature Gates
############################
ENABLE_WORKERS=true
ENABLE_IP_SECURITY=false
ENABLE_SVG_RECONCILER=true


############################
# Redis / BullMQ
############################
REDIS_URL=redis://default:__FILL__@__HOST__:__PORT__
# REDIS_TLS=true            # enable only if rediss:// or TLS required


############################
# Inkscape (Docker/Railway)
############################
# DO NOT use Windows path on Railway
# INKSCAPE_BIN=/usr/bin/inkscape
# (local Windows dev ke liye optional)
# INKSCAPE_BIN=C:/Program Files/Inkscape/bin/inkscape.exe


############################
# Print / Cleanup tuning
############################
PRINT_URL_TTL_SECONDS=60
PRINT_JOB_STALE_MS=900000
PRINT_DEBUG=0
PRINT_DEBUG_SAVE=0


############################
# Vector Worker tuning
############################
VECTOR_RENDER_WORKERS=1
VECTOR_BATCH_SIZE=50
VECTOR_BATCH_ATTEMPTS=3
FINAL_PDF_TTL_HOURS=24
JOB_CLEANUP_INTERVAL_MS=600000

SVG_NORMALIZE_MAX_WAIT_MS=60000


############################
# Admin seed (optional)
############################
# ADMIN_SEED_EMAIL=admin@example.com
# ADMIN_SEED_PASSWORD=StrongPassword123!


############################
# AWS S3
############################
AWS_REGION=ap-south-1
AWS_S3_BUCKET=__FILL__

# Optional (agar public files serve karte ho)
# AWS_S3_PUBLIC_BASE_URL=https://your-bucket.s3.amazonaws.com
